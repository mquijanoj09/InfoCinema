<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".MovieInfoActivity">

    <!-- Logo and App Title Section -->
    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nav Items -->
        <TextView
            android:id="@+id/nav_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_inicio"
            android:textColor="@color/purple"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_top_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_top_10"
            android:textColor="@color/purple"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/nav_filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_filtros"
            android:textColor="@color/purple"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_creditos"
            android:textColor="@color/purple"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Imagen de la película -->
    <ImageView
        android:id="@+id/imagenPelicula"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título y detalles de la película -->
    <TextView
        android:id="@+id/tituloPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscando a Nemo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imagenPelicula"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/detallesPelicula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tituloPelicula"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="14 Julio 2020" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Acción" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h 30 min" />
    </LinearLayout>

    <!-- Estrellas de calificación -->
    <LinearLayout
        android:id="@+id/estrellasCalificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detallesPelicula"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star" />
    </LinearLayout>

    <!-- Descripción -->
    <TextView
        android:id="@+id/descripcionPelicula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="En esta encantadora aventura submarina, un pez payaso llamado Marlin emprende una increíble odisea a través del vasto océano para rescatar a su hijo, Nemo, que ha sido capturado por un buzo..."
        app:layout_constraintTop_toBottomOf="@id/estrellasCalificacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Plataformas disponibles -->
    <TextView
        android:id="@+id/disponibleEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Disponible en:"
        app:layout_constraintTop_toBottomOf="@id/descripcionPelicula"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/plataformas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/disponibleEn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
