<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Logo and App Title Section -->

    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nav Items -->
        <!-- Nav Items -->
        <TextView
            android:id="@+id/nav_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_inicio"
            android:textColor="@color/white"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_top_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_top_10"
            android:textColor="@color/white"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/nav_filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_filtros"
            android:textColor="@color/white"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_creditos"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Credits Section -->

    <!-- Close App Button -->

    <LinearLayout
        android:id="@+id/credits_section"
        android:layout_width="340dp"
        android:layout_height="414dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_bar"
        app:layout_constraintVertical_bias="0.0">

        <!-- Individual Credit Item -->

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="30dp"
            android:background="#0f0926"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="__________________________________________"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#0f0926"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/tifany" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Tifany Ramos"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estudiante de Ingenieria de sistemas Empresariales"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Universidad Cientifica del Sur - UCSUR"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#0f0926"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/miguel" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Miguel Quijano"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estudiante de Ingenieria de Sistemas e Infomatica"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Universidad Pontificia Bolivariana - UPB"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#0f0926"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/bosh" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Jhonatan Bosh"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estudiante de Ingenieria de Sistemas e Infomatica"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Universidad Pontificia Bolivariana - UPB"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:background="#0f0926"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="__________________________________________"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/close_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/purple"
        android:text="Cerrar app"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
