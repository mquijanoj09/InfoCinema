<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <!-- Logo and App Title Section -->
    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nav_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_inicio"
            android:textColor="@color/purple"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_top_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_top_10"
            android:textColor="@color/purple"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_filtros"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_creditos"
            android:textColor="@color/purple"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Explore by Genre Section -->
    <TextView
        android:id="@+id/explore_genero_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explore_genero"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/explore_genero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/explore_genero_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/genre_terror"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Terror"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/genre_comedia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comedia"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/genre_ficcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ficción"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Section: Recommended Movies -->
    <TextView
        android:id="@+id/puntuacion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explora por puntuación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/explore_genero"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/puntuacion_movies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/puntuacion_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/movie_recommended1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/movie_recommended2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/movie_recommended3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>

    <!-- Section: Upcoming Releases -->
    <TextView
        android:id="@+id/movies_2000_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Películas de los 2000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/puntuacion_movies"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/movies_2000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/movies_2000_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/movie_upcoming1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/movie_upcoming2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/movie_upcoming3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>

    <!-- Section: Upcoming Releases -->
    <TextView
        android:id="@+id/emma_watson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emma Watson"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/movies_2000"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/emma_watson_movies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/emma_watson_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/emma_watson"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/emma_watson_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/emma_watson_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
