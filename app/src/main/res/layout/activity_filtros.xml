<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Logo and App Title Section -->

    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nav Items -->
        <TextView
            android:id="@+id/nav_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_inicio"
            android:textColor="@color/white"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_top_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_top_10"
            android:textColor="@color/white"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/nav_filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_filtros"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="16dp" />

        <TextView
            android:id="@+id/nav_creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_creditos"
            android:textColor="@color/white"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Explore by Genre Section -->
    <TextView
        android:id="@+id/explore_genero_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/explore_genero"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_bar" />

    <LinearLayout
        android:id="@+id/explore_genero"
        android:layout_width="366dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explore_genero_title">

        <Button
            android:id="@+id/genre_terror"
            android:layout_width="0dp"

            android:layout_marginStart="4dp"
            android:layout_height="43dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="Terror"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/genre_comedia"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="Comedia"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/genre_ficcion"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="Ficcion"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Section: Recommended Movies -->

    <TextView
        android:id="@+id/puntuacion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="Explora por puntuación"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explore_genero" />

    <!-- Section: Upcoming Releases -->
    <HorizontalScrollView
        android:layout_width="0dp"
        android:id="@+id/scroll_horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/puntuacion_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
    <LinearLayout
        android:id="@+id/puntuacion_movies"
        android:layout_width="462dp"
        android:layout_height="126dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_horizontal">

        <ImageView
            android:id="@+id/movie_recommended2"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/top10" />

        <ImageView
            android:id="@+id/movie_recommended1"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/top1" />

        <ImageView
            android:id="@+id/movie_recommended4"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/top4" />

        <ImageView
            android:id="@+id/movie_recommended3"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/top8" />

    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/movies_2000_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Películas de los 2000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_horizontal"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:id="@+id/scroll_horizontal2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movies_2000_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
    <LinearLayout
        android:id="@+id/movies_2000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/scroll_horizontal2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/movie_upcoming1"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/peli2001" />

        <ImageView
            android:id="@+id/movie_upcoming2"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/peli2002" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/peli2003" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/peli2004" />
    </LinearLayout>
    </HorizontalScrollView>

    <!-- Section: Upcoming Releases -->
    <TextView
        android:id="@+id/emma_watson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emma Watson"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_horizontal2"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:id="@+id/scroll_horizontal3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emma_watson_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
    <LinearLayout
        android:id="@+id/emma_watson_movies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/scroll_horizontal3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/emma_watson"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/emma1" />

        <ImageView
            android:id="@+id/emma_watson_2"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/emma4" />

        <ImageView
            android:id="@+id/emma_watson_3"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/emma3" />

        <ImageView
            android:id="@+id/emma_watson_4"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/emma2" />
    </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
